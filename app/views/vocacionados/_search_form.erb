<%= form_tag(vocacionados_path, :method => "post" , :id => "vocacionados_search") do %> 
  <%= label_tag(:with_name, "Por quem está procurando?") %> <br/>
  <%= text_field_tag(:with_name) %>
  <br/><%= label_tag(:with_birthday_month, "Em que mês ele nasceu?") %><br/>
  <%= text_field_tag(:with_birthday_month) %>
  <br/><%= label_tag(:with_neighborhood, "Em que bairro mora?") %><br/>
  <%= text_field_tag(:with_neighborhood) %>  
  
  <br/><%= label_tag(:vocacionado_cod_estado, "Em que estado mora?") %><br/>
  <%= select_tag(:vocacionado_cod_estado, options_from_collection_for_select(Estado.all, "id", "nome"), {:prompt => "Selecione o estado"} )%>


  <br/><%= label_tag(:vocacionado_cidade_id, "Em que cidade mora?") %><br/>
  <%= select_tag( :vocacionado_cidade_id, options_from_collection_for_select(Cidade.find(:all, :conditions => {:estado_id => :vocacionado_cod_estado}), {:prompt => "Selecione"}, :id, :nome))%>

<br/>
  <%= check_box_tag(:with_birthday) %>  
  <%= label_tag(:with_birthday, "Quero ver os aniversariantes do mês") %>

  <%= check_box_tag(:with_dead_file) %>  
  <%= label_tag(:with_dead_file, "Quero buscar no arquivo morto") %>
 
 <br/>
  <%= submit_tag("Filtrar") %>
<% end %> 