<script type="text/javascript">
  $(document).ready(function() {

    $('#vocacionado_cod_estado').change(function(){ 
      $.getJSON("/estados/" + $(this).val() + '/cidades.json', function(data) {
        $('#vocacionado_cidade_id').empty();        
        $('#vocacionado_cidade_id').append(new Option('Selecione a cidade','0',true,true));
        $.each(data, function(i,item){ 
          $('#vocacionado_cidade_id').append('<option value="' + item.id + '">' + item.nome + '</option>');
        });
      });
    });
    
  });
</script>

<%= form_for(@vocacionado) do |f| %>

<%= render "shared/error_messages", :target => @vocacionado %>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome%>
  </div>
  <div class="field">
    <%= f.label :nascimento %><br />
    <%= f.date_select :nascimento,:start_year => 1950, :include_blank => true  %>
  </div>
  <div class="field">
    <%= f.label :cod_escolaridade %><br />
    <%= f.number_field :cod_escolaridade %>
  </div>
  <div class="field">
    <%= f.label :endereco %><br />
    <%= f.text_field :endereco %>
  </div>
  <div class="field">
    <%= f.label :bairro %><br />
    <%= f.text_field :bairro %>
  </div>
  <div class="field">
    <%= f.label :cep %><br />
    <%= f.text_field :cep %>
  </div>
  <div class="field">
    <%= f.label :complemento_endereco %><br />
    <%= f.text_field :complemento_endereco %>
  </div>
  <div class="field">
    <%= f.label :estado %><br />    
    <%= f.collection_select :cod_estado, Estado.all, :id, :nome, {:prompt => true} %>
  </div>

  <div class="field">
    <%= f.label :cidade %><br />
    <%= f.collection_select :cidade_id, Cidade.find(:all, :conditions => {:estado_id => @vocacionado.cod_estado}), :id, :nome %>
     
  </div>
  <div class="field">
    <%= f.label :telefone_residencial %><br />
    <%= f.text_field :telefone_residencial %>
  </div>
  <div class="field">
    <%= f.label :celular %><br />
    <%= f.text_field :celular %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
