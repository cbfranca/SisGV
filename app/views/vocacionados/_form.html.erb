  </div>
  <div class="field">
    <%= f.label :primeiro_contato %><br />
    <%= f.date_select :primeiro_contato  ,:start_year => 1995, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :ativo %><br />
    <%= f.check_box :ativo %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
