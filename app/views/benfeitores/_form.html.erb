<%= form_for(@benfeitor) do |f| %>
<br/>
<%= flash_message %>

<table style="width:455px; height:auto" class="textof" border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td colspan="3"  style="width:148px;"><h3 style="text-align:left">Como ele se chama?
      <span style="color: #F00;"><strong>*</strong></span></h3>
    </td>        
  </tr>
  <tr>
    <td colspan="3" style="width:121px;">
      <div>
        <%= f.text_field(:nome, :class => "estilo_caixa blur", :maxlengh => 255 , :style => "width:328px; height:18px;") %>
      </div>
    </td>
  </tr>
  <tr>
    <td colspan="3"  style="width:150px; height:38px">      
        <span style="text-align:left; ">Quando ele nasceu?
         <span style="color: #F00;"><strong>*</strong></span>
        </span>      
    </td>   
  </tr>
  <tr>
    <td  colspan="3" style="width:150px; ">      
      <%= f.date_select :nascimento  , {:start_year => 1960, :include_blank => true}, {:class => "text_select"} %>
    </td>
  </tr>
  <tr>
    <td colspan="3"  style="width:148px;">
      <h3 style="text-align:left">Qual o endereço dele?
        <span style="color: #F00;"><strong>*</strong></span>
      </h3>
    </td>
  </tr>
  <tr>
    <td colspan="3"  style="width:121px;">
      <div>
          <%= f.text_field :endereco , :class => "estilo_caixa blur", :maxlengh => 255 , :style => "width:328px; height: 18px;"  %>  
      </div>
    </td>
  </tr>
  <tr>
      <td colspan="3"  style="width:148px; height:38px">
      <span style="text-align:left; ">Em que bairro mora?
        <span style="color: #F00;"><strong>*</strong></span>
      </span>
      </td>
     <td  style="width:148px; height:38px">
        <div style="margin-left:-120px;padding-left:30%">
        <span style="text-align:left; padding-left:20px;">Qual o CEP da residencia dele?
          <span style="color: #F00;"><strong>*</strong></span>
        </span>
        </div>
      </td>
  </tr>
  <tr>
    <td colspan="3"  style="width:80px;">
      <div>
        <%= f.text_field(:bairro, :class => "estilo_caixa blur", :maxlengh => 255 ,:style => "width: 240px; height: 18px;") %>
      </div>
    </td>
    <td  style="width:190px;">
      <div style="margin-left:-100px;padding-left:30%">
        <%= f.text_field(:cep , :class => "estilo_caixa blur", :maxlengh => 9 , :style => "width:170px; height: 18px;") %>
      </div>
    </td>
  </tr>
  <tr>
    <td colspan="3"  style="width:148px;">
      <h3 style="text-align:left">Se precisar complemente o endereço dele?</h3>
    </td>
  </tr>
  <tr>
    <td colspan="3"  style="width:121px;">
      <div>
        <%= f.text_field :complemento_endereco, :class => "estilo_caixa blur", :maxlengh => 255 ,:style => "width:328px; height: 18px;" %>
      </div>
    </td>
  </tr>
  <tr>
    <td colspan="3"  style="width:148px; height:38px">
      <span style="text-align:left; ">Em que estado mora?
        <span style="color: #F00;"><strong>*</strong></span>
      </span>
  </td>
  <td  style="width:148px; height:38px">
    <div style="margin-left:-195px;padding-left:30%">
   <span style="text-align:left; padding-left:20px;">Em que cidade mora?
     <span style="color: #F00;"><strong>*</strong></span>
   </span>
   </td>
  </tr>
  <tr>
    <td colspan="3"  style="width:80px;">
      <div>
        <%= f.collection_select(:cod_estado, Estado.all, :id, :nome, {:prompt => true} ,:class=>"styled2 text_select", :style=>"width:168px; height:auto;") %>          
      </div>
    </td>
    <td  style="width:190px;">
       <div style="margin-left:-180px;padding-left:30%">
      <%= f.text_field(:cidade_id, :class => "estilo_caixa blur", :maxlengh => 255 ,:style => "width: 168px; height: auto;") %>
       </div>
    </td>
  </tr>
  <tr>
    <td colspan="3"  style="width:148px; height:38px"><span style="text-align:left; ">Qual o telefone da residencia dele?</span></td>
    <td>
      <div style="margin-left:-100px;padding-left:30%">
        <span>Qual o celular dele?</span>
      </div>
    </td>
  </tr>
  <tr>
    <td colspan="3"  style="width:80px;">
      <div>
        <%= f.text_field :telefone_residencial,:class=>"estilo_caixa blur", :maxlengh => 13 ,:style => "width: 240px; height: 18px;" %>
      </div>
    </td>
    <td>
      <div style="margin-left:-100px;padding-left:30%">
         <%= f.text_field :celular, :class => "estilo_caixa blur", :maxlengh => 13 ,:style => "width:170px; height: 18px;" %>
      </div>
    </td>
  </tr>
  <tr>
    <td colspan="3"  style="width:148px;"><h3 style="text-align:left">Qual o e-mail dele?</h3></td>
    </tr>
  <tr>
    <td colspan="3"  style="width:121px;">
      <div>
        <%= f.text_field :email, :class => "estilo_caixa blur", :style => "width:328px; height: 18px;"%>
      </div>
    </td>
  </tr>
   <tr>
    <td colspan="3"  style="width:148px; height:38px"><span style="text-align:left; ">Quando foi o primeiro Contato?</span></td>
  </tr>
  <tr>
    <td >      
      <div style="width:auto; height: auto;">
        <%= f.date_select :primeiro_contato  , {:start_year => 1995, :include_blank => true}, {:class => "text_select"} %>
      </div>
    </td>
  </tr>   
    <tr>
     <td colspan="3"  style="width:148px; height:38px">
       <%= f.check_box :ativo, {checked: @benfeitor.ativo} %>
      <label for="checkbox"></label>
      <span style="text-align:left; ">Este benfeitor está ativo?</span>
    </td>            
    </tr>
  </table>
  <br><br>
  <div  style="float:left; width:476px; padding-right:10px; margin-left:-298px">
    <div style="float:left; padding-left:296px;">       
      <%= image_submit_tag "salvar.png", :class => "cursor", :style=>"width:83px; height:27px; border:0px solid #ddd; padding: 0px 0px 0px 0px",  :border=>"0" %>
   </div>
    <div id="cancelar" style="float:right;">
      <h4><%= link_to 'Cancelar', benfeitores_path , :class=>"cursor"%></h4>
    </div>
  </div>  
<% end %>
